<h1 class="col-md-12">Login</h1>

<%= form_for :login do |f| %>
  <div class="col-md-12">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="col-md-12">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="col-md-12">
    <%= f.submit 'Log in' %>
  </div>

<% end %>

