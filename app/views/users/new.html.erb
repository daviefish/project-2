<h1>Signup</h1>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

   <div>
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

   <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

   <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

   <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.submit 'Sign Up' %>
  </div>

<%end%>

